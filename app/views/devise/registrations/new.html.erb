<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="text-center">
        <% if params[:plan] == '2' %>  
          <h1>Pro</h1>
          <p> Sign up for the Pro Account for $10/month to access the full community and contact information.</p>
        <% else %>
          <h1>Basic</h1>
          <p>Sign up for the Basic Account for free to get limited community access.</p>
        <% end %>
      </div>
      
      <div class="well">
        <% if params[:plan] == '2'%>
          <%= render 'pro_form' %>
        <% else %>
          <%= render 'basic_form' %>
        <% end %>
        
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>